<div style="float: left"><h1>Custom Field</h1></div>
<div style="float: right; padding: 20px;">
&nbsp;&nbsp;&nbsp;<%= link_to "Home", home_index_url, style:"font-size: 15px;" %>&nbsp;&nbsp;&nbsp;
  <%= link_to "New Custom Field", new_companycustomfield_path, style:"font-size: 15px;" %><br />
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">SR No</th>
      <th scope="col">Company</th>
      <th scope="col">Custom Field</th>
      <th scope="col">User</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
  <% i=0 %>
  <% @company.each do |data| %>
    <% if data.company_custom_fields.present? %>
      <% data.company_custom_fields.each do |record| %>
          <tr>
              <th scope="row"><%= i += 1 %></th>
              <td><%= data.company_name%></td>
              <td><%= record.custom_field%></td>
              <td><%= User.find_by(company_id: data.id)&.name %></td>
              <td><%= link_to fa_icon("pencil"), edit_companycustomfield_path(record), class: 'task-button' %></td>
              
          </tr>
      <% end %>
    <% end %>
  <% end %>
  </tbody>
</table>
